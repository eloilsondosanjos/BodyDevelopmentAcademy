{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
        <a class="button-cadastrar" href="/instructors/create">+ Novo</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Instrutor</th>
                    <th>Atendimento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for instructor in instructors %}
                    <tr>
                        <td>{{ instructor.id }}</td>
                        <td class="avatar_nome">
                            <span style="background-image: url({{ instructor.avatar_url }})"></span>
                            {{ instructor.name }}</td>
                        <td>{{ instructor.services}}</td>
                        <td>
                            <a href="/instructors/{{ instructor.id }}">Detalhes</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}