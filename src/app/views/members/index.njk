{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
        <div class="header">
            <a class="button-cadastrar" href="/members/create">+ Novo</a>
            <form action="/members" method="GET">
                <input type="text" name="filter" placeholder="Filtrar por Nome">
                <button type="submit">Filtrar</button>
            </form>
        </div>
        <table width="100%">
            <thead>
                <tr>
                    {# <th>Id</th> #}
                    <th>Membro</th>
                    <th>Peso</th>
                    <th>Altura</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                    <tr>
                        {# <td>{{ member.id }}</td> #}
                        <td class="avatar_nome">
                            <span style="background-image: url({{ member.avatar_url }})"></span>
                            {{ member.name }}</td>
                        <td>{{ member.weight}}kg</td>
                        <td>{{ member.height}}cm</td>
                        <td>
                            <a href="/members/{{ member.id }}">Detalhes</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}